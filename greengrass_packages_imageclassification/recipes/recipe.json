{
    "RecipeFormatVersion": "2020-01-25",
    "ComponentName": "ImageClassification-Starly",
    "ComponentVersion": "1.0.0",
    "ComponentType": "aws.greengrass.generic",
    "ComponentDescription": "Sample recipe - Image classification inference using TFlite runtime and mobilenet quantized model.",
    "ComponentPublisher": "Amazon",
    "ComponentConfiguration": {
      "DefaultConfiguration": {
        "accessControl": {
          "aws.greengrass.ipc.mqttproxy": {
            "ImageClassification-Starly:mqttproxy:1": {
              "policyDescription": "Allows access to publish via topic ml/tflite/image-classification.",
              "operations": [
                "aws.greengrass#PublishToIoTCore"
              ],
              "resources": [
                "ml/tflite/image-classification"
              ]
            }
          }
        },
        "ImageName": "white_cat.jpeg",
        "InferenceInterval": "3600",
        "PublishResultsOnTopic": "ml/tflite/image-classification",
        "ModelResourceKey": {
          "model": "TensorFlowLite-Mobilenet"
        }
      }
    },
    "ComponentDependencies": {
      "variant.TensorFlowLite": {
        "VersionRequirement": ">=2.5.4 <2.6.0",
        "DependencyType": "HARD"
      },
      "variant.TensorFlowLite.ImageClassification.ModelStore": {
        "VersionRequirement": ">=2.1.3 <2.2.0",
        "DependencyType": "HARD"
      },
      "aws.greengrass.Nucleus": {
        "VersionRequirement": ">=2.0.0 <2.6.0",
        "DependencyType": "SOFT"
      }
    },
    "Manifests": [
      {
        "Platform": {
          "os": "linux",
          "architecture": "arm"
        },
        "Lifecycle": {
          "setEnv": {
            "DEFAULT_TFLITE_IC_IMAGE_DIR": "{artifacts:path}/image_classification/sample_images/",
            "TFLITE_IC_MODEL_DIR": "{variant.TensorFlowLite.ImageClassification.ModelStore:artifacts:decompressedPath}/{configuration:/ModelResourceKey/model}/"
          },
          "run": {
            "RequiresPrivilege": "true",
            "script": "\n                                    . {variant.TensorFlowLite:configuration:/MLRootPath}/greengrass_ml_tflite_venv/bin/activate\n                                    python3 -u {artifacts:path}/image_classification/inference.py"
          }
        }
      }
    ],
    "Lifecycle": {}
  }