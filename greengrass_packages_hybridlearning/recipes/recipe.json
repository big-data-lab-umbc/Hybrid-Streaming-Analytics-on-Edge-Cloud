{
    "RecipeFormatVersion": "2020-01-25",
    "ComponentName": "HybirdLearning-Starly",
    "ComponentVersion": "1.0.0",
    "ComponentType": "aws.greengrass.generic",
    "ComponentDescription": "HybirdLearning recipe - HybirdLearning with Batchlayer and pre-trained tflite model from S3.",
    "ComponentPublisher": "Amazon",
    "ComponentConfiguration": {
      "DefaultConfiguration": {
        "accessControl": {
          "aws.greengrass.ipc.mqttproxy": {
            "HybirdLearning-Starly:mqttproxy:1": {
              "policyDescription": "Allows access to publish/subscribe to all topics.",
              "operations": [
                "aws.greengrass#PublishToIoTCore",
                "aws.greengrass#SubscribeToIoTCore"
              ],
              "resources": [
                "*"
              ]
            }
          }
        },
        "ImageName": "white_cat.jpeg",
        "InferenceInterval": "3600",
        "PublishResultsOnTopic": "ml/tflite/#",
        "ModelResourceKey": {
          "model": "TensorFlowLite-Mobilenet"
        }
      }
    },
    "ComponentDependencies": {
      "variant.TensorFlowLite": {
        "VersionRequirement": ">=2.5.4 <2.6.0",
        "DependencyType": "HARD"
      },
      "variant.TensorFlowLite.ImageClassification.ModelStore": {
        "VersionRequirement": ">=2.1.3 <2.2.0",
        "DependencyType": "HARD"
      },
      "aws.greengrass.Nucleus": {
        "VersionRequirement": ">=2.0.0 <2.6.0",
        "DependencyType": "SOFT"
      }
    },
    "Manifests": [
      {
        "Platform": {
          "os": "linux",
          "architecture": "arm"
        },
        "Lifecycle": {
          "setEnv": {
            "DEFAULT_TFLITE_IC_IMAGE_DIR": "{artifacts:path}/hybird_learning/sample_data/",
            "TFLITE_IC_MODEL_DIR": "{artifacts:path}/hybird_learning/sample_model/"
          },
          "run": {
            "RequiresPrivilege": "true",
            "script": "\n                                    . {variant.TensorFlowLite:configuration:/MLRootPath}/greengrass_ml_tflite_venv/bin/activate\n                                    python3 -u {artifacts:path}/hybird_learning/hybrid_layer.py"
          }
        }
      }
    ],
    "Lifecycle": {}
  }